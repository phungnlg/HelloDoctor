<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themecolor"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00b873"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_profile"
                >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/fragment_profile_iv_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_nurse_4"
                    app:riv_border_color="#fff"
                    app:riv_border_width="5dip"
                    app:riv_corner_radius="30dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="true"
                    app:riv_tile_mode="repeat"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.phungnlg.hellodoctor.Others.MyTextView
                    android:id="@+id/fragment_profile_tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Bác sỹ Thành Tâm"
                    android:textColor="@android:color/white"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    />

                <com.phungnlg.hellodoctor.Others.MyTextView
                    android:id="@+id/fragment_profile_tv_user_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:maxLines="2"
                    android:text="Bán thuốc dạo ở chợ đầu mối Nông sản Thủ Đức, bệnh gì cũng có thuốc..."
                    android:textColor="@android:color/white"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="25dp"
                    android:background="#c6cbcf"
                    ></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_thumb_up_black_24dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <com.phungnlg.hellodoctor.Others.MyTextView
                            android:id="@+id/fragment_profile_tv_user_following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="852"
                            android:textColor="@android:color/white"
                            android:textSize="20dp"
                            />

                        <com.phungnlg.hellodoctor.Others.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <com.phungnlg.hellodoctor.Others.MyTextView
                            android:id="@+id/fragment_profile_tv_user_follower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5562"
                            android:textColor="@android:color/white"
                            android:textSize="20dp"
                            />

                        <com.phungnlg.hellodoctor.Others.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/fragment_profile_btn_profile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_account_circle_black_18dp"
                        android:text="HỒ SƠ"
                        />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/fragment_profile_btn_Schedule"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_schedule_black_18dp"
                        android:text="LỊCH KHÁM"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <com.phungnlg.hellodoctor.Others.MyTextView
                        android:id="@+id/fragment_profile_tv_Test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="3"
                        android:letterSpacing="0.08"
                        android:text="Bài viết gần đây..."
                        android:textColor="@android:color/white"
                        android:textSize="14dp"
                        />


                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_profile_list_user_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:background="@color/themecolor"
                android:paddingBottom="4dp"
                >
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
