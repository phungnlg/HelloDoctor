<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_category"
    android:layout_width="120dp"
    android:layout_height="120dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/item_category_icon"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:contentDescription="Gọi điện"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_call"
            />

        <TextView
            android:id="@+id/item_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/item_category_icon"
            android:background="@drawable/bg_gradient_2"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Gọi điện"
            android:textColor="@color/white"
            android:textSize="13sp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>