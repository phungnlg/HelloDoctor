<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:background="@android:color/transparent"
    android:elevation="8dp"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/fragment_profile_iv_image"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/img_profile_picture"
                    app:riv_border_color="#fff"
                    app:riv_border_width="5dip"
                    app:riv_corner_radius="15dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="false"
                    app:riv_tile_mode="repeat"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <com.phungnlg.hellodoctor.others.MyTextView
                        android:id="@+id/item_doctor_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:lineSpacingExtra="3dp"
                        android:text="Description"
                        android:textAlignment="center"
                        android:textColor="@color/themecolor"
                        android:textSize="18dp"
                        />

                    <com.phungnlg.hellodoctor.others.MyTextView
                        android:id="@+id/item_doctor_tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:drawableLeft="@drawable/ic_location_on_black_18dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/themecolor"
                        android:lineSpacingExtra="3dp"
                        android:text="Description"
                        android:textColor="@color/listsub1"
                        android:textSize="14dp"
                        />

                    <com.phungnlg.hellodoctor.others.MyTextView
                        android:id="@+id/item_doctor_tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:drawableLeft="@drawable/ic_account_circle_black_18dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/themecolor"
                        android:lineSpacingExtra="3dp"
                        android:text="Description"
                        android:textColor="@color/listsub1"
                        android:textSize="14dp"
                        />

                    <com.phungnlg.hellodoctor.others.MyTextView
                        android:id="@+id/item_doctor_tv_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@drawable/ic_location_on_black_18dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/themecolor"
                        android:maxLines="1"
                        android:text="Rating"
                        android:textColor="@color/listsub2"
                        android:textSize="14dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="5dp"
                android:background="@color/listsub2"
                ></View>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:id="@+id/item_doctor_ib_call"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_call"
                        android:tint="@color/themecolor"
                        android:tintMode="multiply"
                        />
                    >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:id="@+id/item_doctor_ib_message"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_message"
                        />
                    >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:id="@+id/item_doctor_ib_schedule"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_schedule"
                        />
                    >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:id="@+id/item_doctor_ib_working_experience"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_working_background"
                        />
                    >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
