<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        >

        <ImageView
            android:id="@+id/layout_service_dashboard_iv"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:background="@drawable/bg_newsfeed_gradient"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            >

            <com.phungnlg.hellodoctor.others.MyTextView
                android:id="@+id/layout_service_dashboard_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Độc quyền"
                android:textColor="#fff"
                android:textSize="22dp"
                />


            <com.phungnlg.hellodoctor.others.MyTextView
                android:id="@+id/shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginRight="130dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rect1"
                android:gravity="center"
                android:padding="5dp"
                android:text="Xem chi tiết"
                android:textColor="#fff"
                android:textSize="14dp"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
